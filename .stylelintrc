{
  "plugins": [
		"stylelint-order"
	],
  "extends": "stylelint-config-sass-guidelines",
  "rules": {
    "order/order": [
			"custom-properties",
			"declarations"
		],
		"order/properties-alphabetical-order": true,
    "indentation": ["tab", {
      "except": ["value"]
    }],
    "selector-max-compound-selectors": 10,
    "max-nesting-depth": 10,
  }
}