extends layouts/default_layout
include mixins/page-title-img
include mixins/event-single-sidebar
include mixins/single-event-days

block title
	title AAPA 2018 - Party for a Purpose
block scripts
	script(src="js/getTweets.min.js")
block content
	+page-title-img(`background-image: url('img/event-pages/Party4Purpose-hero.jpg'); background-position: 50% 25%;`, `Party for a Purpose`, `Party for a Purpose @ B.B. King’s Blues Club`)

	section.small-section.bg-pattern--blue
		.container
			main.event-main
				+single-event-days('party-purpose-b-b-kings-blues-club')
				article
					h3 Party for a Purpose
					p.lead It’s a PA party in the Crescent City at B.B. King’s Blues Club! Come enjoy hors d’oeuvres, drinks, live music and dancing with your friends and colleagues. Funds raised benefit the PA Foundation and its work to promote better health by providing PAs and PA students with philanthropic opportunities and resources.

					.adress-display
						.adress-display-item
							dl.list-definition
								dt B.B. King's Blues Club
								dd
									ul
										li
											address 1104 Decatur Street
												br
												| New Orleans, LA 70116
											svg
												use(xlink:href='#icon-location', xmlns:xlink='http://www.w3.org/2000/xlink')
										li
											a(href="tel:+5049345464") (504) 934-5464
											svg
												use(xlink:href='#contact__phone', xmlns:xlink='http://www.w3.org/2000/xlink')
										li
											a(href="tel:+5049345465") (504) 934-5465
											svg
												use(xlink:href='#contact__fax', xmlns:xlink='http://www.w3.org/2000/xlink')
										li
											a(href="//www.bkings.com") www.bbkings.com
											svg
												use(xlink:href='#contact__website-solid', xmlns:xlink='http://www.w3.org/2000/xlink')
						.adress-display-item
							img(src="https://super8nashville.files.wordpress.com/2015/06/super_bbking.jpg", alt="alt")

				+event-footer
			+event-sidebar