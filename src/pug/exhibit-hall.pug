extends layouts/default_layout
include mixins/page-title-img
include mixins/event-single-sidebar
block title
	title AAPA 2018 - Exhibit Hall
block content
	+page-title-img(`background-image: url('images/event-pages/ExhibitHall-hero.jpg');`, `Exhibit Hall`, `Exhibit Hall`)

	section.small-section.bg-pattern--blue
		.container
			main.event-main
				header.event-main-photo
					img(src="images/event-pages/ExhibitHall-event.jpg", alt="alt")
				article
					h3 Exhibit Hall
					p.lead The interactive Exhibit Hall will keep you on the cutting edge of medicine.
					p.lead More than 250 exhibitors will be in New Orleans with the latest medical technologies, educational and career resources, pharmaceutical therapies and treatment tools.
					div.inline-list.text-center
						li
							a.btn.btn-purple(href='//s23.a2zinc.net/clients/aapas/AC18/Public/EventMap.aspx?shMode=E&ID=44&sortMenu=103002', target='_blank', rel='noopener') View Our Exhibitors
						li
							a.btn.btn-teal(href='//s23.a2zinc.net/clients/aapas/AC18/Public/Enter.aspx', target='_blank', rel='noopener') Become an Exhibitor
				footer
					span
						i.fa.fa-share-alt
						| share
					ul.post-share
						li
							a(href='#')
								i.fa.fa-facebook
						li
							a(href='#')
								i.fa.fa-twitter
						li
							a(href='#')
								i.fa.fa-linkedin
						li
							a(href='#')
								i.fa.fa-skype
						li
							a(href='#')
								i.fa.fa-behance


			aside.event-sidebar
				.widget
					h4 Special Events
					.widget-flex
						+event-sidebar