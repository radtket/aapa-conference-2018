doctype html
html(lang='en')
	head
		block title
			title Default title
		meta(charset='utf-8')
		meta(http-equiv='x-ua-compatible', content='ie=edge')
		meta(name='description', content='')
		meta(name='viewport', content='width=device-width,initial-scale=1')

		//- Favicons
		link(rel='apple-touch-icon', sizes='180x180', href='apple-touch-icon.png')
		link(rel='icon', type='image/png', sizes='32x32', href='favicon-32x32.png')
		link(rel='icon', type='image/png', sizes='16x16', href='favicon-16x16.png')
		link(rel='manifest', href='manifest.json')
		link(rel='mask-icon', href='safari-pinned-tab.svg', color='#63d0df')
		meta(name='theme-color', content='#ffffff')


		//- Normalize
		link(href="https://cdnjs.cloudflare.com/ajax/libs/normalize/7.0.0/normalize.min.css", rel="stylesheet")
		block vendorCSS
		//- Base Styles
		link(href="css/application.css", rel="stylesheet")

		//- Modernizr
		script(src="https://cdnjs.cloudflare.com/ajax/libs/modernizr/2.8.3/modernizr.min.js", type='text/javascript')
	body
		//- include ../components/svg
		.page-loader.block
			.loader Loading...
		include ../components/navbar

		block content

		include ../components/footer

	script(src='https://code.jquery.com/jquery-1.12.4.min.js', type='text/javascript')
	script(src="https://unpkg.com/imagesloaded@4/imagesloaded.pkgd.min.js", type='text/javascript')
	block vendorScripts
	script(src='js/app.min.js', type='text/javascript')
	block scripts
